<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="in.ac.iiitd.psingh.mc16.objectivequiz.QuizActivity"
    android:baselineAligned="false"
    android:background="#10cdb7"
    android:backgroundTint="#43cc87"
    android:weightSum="1">


    <TextView
        android:id="@+id/textViewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/question"
        android:textSize="23sp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"


        android:paddingTop="5dp"
        android:paddingBottom="7dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/TrueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trueText"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/arrow_left"
            android:background="@drawable/my_button" />
        <Button
            android:id="@+id/FalseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/falseText"
            android:textColor="#FFFFFF"

            android:drawableRight="@drawable/arrow_right"
            android:background="@drawable/my_button"/>

    </LinearLayout>
    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nextText"
        android:textColor="#FFFFFF"
        android:onClick="generate"
        android:background="@drawable/my_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint"
        android:background="@drawable/my_button"
        android:textColor="#FFFFFF"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="hint"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheat"
        android:id="@+id/button"
        android:background="@drawable/my_button"
        android:textColor="#FFFFFF"
        android:onClick="cheat"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Your Score is: "
        android:layout_weight="0.07"
        android:textSize="23sp"
        android:textColor="#FF000000"
        android:paddingBottom="10dp"/>


</LinearLayout>
